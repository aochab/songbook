<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="aochab.songbook">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_icon_note"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_icon_note_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activity.SongDetailActivity"
                android:launchMode="singleTask" />
        <activity
                android:name=".activity.MainActivity"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.SonglistActivity"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.AddSongActivity"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
                android:name=".activity.EditSongActivity"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>